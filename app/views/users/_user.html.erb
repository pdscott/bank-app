
<td>
  <%= link_to user.name, user %>
</td>

<td>
  <%= link_to user.email, user %>
</td>
<% if !user.superadmin?  %>
  <td>
    <%= link_to 'View Accounts', user_accounts_path(user.id) %>
  </td>

  <td>
    <%= form_for(user) do |f| %>
      <%= f.select(:role, %w[user admin]) %>
      <%= f.submit 'Change Role', :class => 'button-xs' %>
    <% end %>

  </td>
  <td>
    <%= link_to("Delete user", users_path, :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'button-xs') unless user == current_user %>
  </td>
<% end %>
