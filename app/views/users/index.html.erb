

<div class="container">
  <div class="row">
    <h3>Users</h3>
    <%= form_tag users_path, :method => 'get' do %>
        <%= select_tag 'filter', options_for_select(['All', 'Users', 'Admins'], @filter) %>
        <%= submit_tag 'Filter By Role', :name => nil%>
    <% end %>

    <div class="column">
      <table class="table">
        <tbody>
        <th>Name</th><th>Email</th><th>Accounts</th><th>User Type</th><th>Delete</th>
          <% @users.each do |user| %>
            <tr>
              <%= render user %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
