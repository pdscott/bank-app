<p id="notice"><%= notice %></p>

<h1>Accounts</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Status</th>
      <th>Balance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @accounts.each do |account| %>
          <tr>
            <td><%= sprintf("%09d",account.id) %></td>
            <td><%= account.status %></td>
            <td><%= sprintf("%.2f",account.balance) %></td>
            <td><%= link_to 'Show', account %></td>
            <% if current_user.role == "admin" %>
              <td><%= link_to 'Edit', edit_account_path(account) %></td>
              <td><%= link_to('Delete account', account, :method => :delete, :data => { confirm: 'Are you sure?'}, :class => 'button-xs') %></td>
            <% end %>
          </tr>
  <% end %>
  </tbody>
</table>

<br>

<% if current_user.role == "user" %>
  <%= link_to 'Request New Account', new_user_account_path %>
<% elsif current_user.role == "admin" && params[:user_id]  %>
  <%= link_to 'Create New Account', new_user_account_path(params[:user_id]) %>
<% end %>

